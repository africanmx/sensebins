PROGRAM_NAME="Abc"
PROGRAM_VERSION="0.1"
## Replace the > in the CONSOLE_THINGY
## with your own string like ~$ or ~#
## or whatever need. Leave a space for
## better esthetics in the console.
CONSOLE_THINGY="> "
abc(){
	case "$1" in
		--version) echo "$PROGRAM_VERSION"; ;;
		--help)
			cat <<EOF
usage:
	abc			Echoes the alphabet in uppercase.
	abc --version 		Shows abc version.
	abc --help 		Shows this screen.
EOF
	;;
	--console)
		while [[ true ]] ; do
			read -p "$PROGRAM_NAME$CONSOLE_THINGY"
			case "$REPLY" in
				q|quit|exit|sal|salir)
					echo "Bye"
					exit 0
				;;
				*)
					run "$REPLY"
				;;
			esac
		done
	;;
	*)
		run "$@"
	;;
	esac
}
run(){
	for i in {65..93} ; do
		printf "\x$(printf %x $i)"
	done
}
abc "$@"
